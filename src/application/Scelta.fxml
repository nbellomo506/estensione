<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="scelta" fx:id="scelta" alignment="CENTER" style="-fx-background-color: #051650;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceltaController">
   
    <TableView fx:id="dendrogramTable" styleClass="dendrogram-table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dendrogramColumn" prefWidth="143.0" text="Dendrogramma" />
        </columns>
    </TableView>
    
    <!-- Componenti per File -->
    <VBox fx:id="fileComponents" spacing="10" styleClass="input-container">
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="fileNameInput" editable="false" promptText="Seleziona un file .dat" styleClass="input-field" stylesheets="@application.css" HBox.hgrow="ALWAYS" />
            <Button fx:id="loadFileButton" onAction="#handleLoadFile" styleClass="action-button" text="Sfoglia" />
            <Button fx:id="createButton" onAction="#handleCreate" styleClass="action-button" text="Crea file" />
        </HBox>
    </VBox>
    
    <!-- Componenti per Database -->
    <VBox fx:id="dbComponents" spacing="10" styleClass="input-container">
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="depthInput" prefWidth="100" promptText="ProfonditÃ " styleClass="input-field" stylesheets="@application.css" />
            <ComboBox fx:id="distanceType" promptText="Tipo distanza" styleClass="combo-box" />
            <Button fx:id="executeButton" onAction="#handleExecute" styleClass="action-button" text="Esegui" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="saveButton" onAction="#handleSave" styleClass="action-button" text="Salva" />
            <Button fx:id="runButton" onAction="#handleRun" styleClass="action-button" text="Esegui file" />
        </HBox>
    </VBox>
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</VBox>
