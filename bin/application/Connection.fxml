<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox id="home" fx:id="home" alignment="CENTER" prefHeight="404.0" prefWidth="600.0" styleClass="main-container" stylesheets="@application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ConnectionController">
   <children>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Connessione">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
         </children>
      </VBox>
      
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Nome host:">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin></Text>
            <TextField fx:id="hostNameInput" alignment="CENTER" text="localhost">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin></TextField>
            
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Porta:">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin></Text>
            <TextField fx:id="portInput" alignment="CENTER" text="8000">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin></TextField>
         </children>
         <padding>
            <Insets left="40.0" right="40.0" />
         </padding>
      </VBox>
      
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="connetti" mnemonicParsing="false" onAction="#connetti" styleClass="action-button" text="Connect" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
